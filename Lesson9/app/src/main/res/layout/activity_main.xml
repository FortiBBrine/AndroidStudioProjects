<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <RelativeLayout
       android:id="@+id/upper_background"
       android:layout_width="match_parent"
       android:background="@color/other_background_color"
       android:layout_height="200dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/montserrat_bold"
           android:textSize="20sp"
           android:layout_marginStart="40dp"
           android:layout_marginTop="40dp"
           android:text="@string/hello_admin"
           android:textColor="@color/white" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/montserrat_bold"
           android:textSize="14sp"
           android:layout_marginStart="40dp"
           android:layout_marginTop="70dp"
           android:text="@string/your_room"
           android:textColor="@color/bg" />

   </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/main_box"
        android:layout_below="@+id/upper_background"
        android:background="@color/white"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="-80dp"
        android:layout_height="150dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/my_room"
            android:backgroundTint="@color/purple_700"
            android:layout_marginHorizontal="50dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/main_box"
        android:contentDescription="@string/app_name"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/shop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/other_background_color"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:text="@string/main"
            android:backgroundTint="@color/purple_700"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/contacts"
            android:backgroundTint="@color/purple_700"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:text="@string/vlog"
            android:backgroundTint="@color/purple_700"/>

    </LinearLayout>

</RelativeLayout>